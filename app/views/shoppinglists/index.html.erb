<%= render "shared/header" %>

<div class="shoppinglist-contens">
  <h1 class="shoppinglist-content-title">食材メモ</h1>
  <%= link_to "追加", new_room_shoppinglist_path %>
  <ul class="shoppinglists">
    <% @shoppinglists.each do |shoppinglist|%>
      <li class="shoppinglist">
        <%= shoppinglist.content %>
        <%= link_to room_shoppinglist_path(room_id: @room.id, id: shoppinglist.id), method: :delete, class: "delete-shoppinglist-link" do %>
          <i class="fa-solid fa-trash-can"></i>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<%= render "shared/footer" %>