<div class="device-contents">
  <h2 class="login-title">ログイン</h2>
  <div class="device-container">
    <%= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
        </div>
        <%= f.email_field :email, class:"input-default",autofocus: true %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
        </div>
        <%= f.password_field :password, class:"input-default", autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-group">
          <%= f.label :remember_me %><br />
          <%= f.check_box :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Push", class:"login-red-btn"%>
      </div>
    <% end %>
    <div class="to-registration">
      <%= link_to 'はじめての方', new_user_registration_path, class:"to-registration-btn" %>
    </div>
  </div>
</div>