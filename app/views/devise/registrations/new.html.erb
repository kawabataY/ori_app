<div class="device-contents">
  <h2 class="signup-title">SignUp</h2>
  <div class="device-container">
    <%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">なまえ<em>(6文字以内)</em></label>
        </div>
        <%= f.text_field :name, class:"input-default-name", autofocus: true, maxlength: "6" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">メールアドレス</label>
        </div>
        <%= f.email_field :email, class:"input-default",autofocus: true %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード</label>
        </div>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> 文字以上)</em>
        <% end %><br />
        <%= f.password_field :password, class:"input-default", autocomplete: "off" %>
      </div>

      <div class="form-group">
        <div class='form-text-wrap'>
          <label class="form-text">パスワード確認</label>
        </div>
        <%= f.password_field :password_confirmation, class:"input-default", autocomplete: "off" %>
      </div>

      <div class="actions">
        <%= f.submit "Push", class:"login-red-btn"%>
      </div>
    <% end %>
  </div>
</div>